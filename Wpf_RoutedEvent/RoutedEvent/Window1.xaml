<Window x:Class="RoutedEvent.Window1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Window1" Height="300" Width="300">
  <Grid>
    <Button Name="button1" Click="button1_Click" MouseEnter="button1_MouseEnter" MouseLeave="button1_MouseLeave">
      <DockPanel Name="stackPanel1">
        <Image Source="./help.png" Name="image1" DockPanel.Dock="Top" Height="213" ImageFailed="Image_ImageFailed" 
               MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" />
        <Label Name="label1" DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontFamily="tahoma" FontWeight="Bold" FontSize="18" 
               MouseEnter="label1_MouseEnter" MouseLeave="label1_MouseLeave">Some Text</Label>
      </DockPanel>
    </Button>
  </Grid>
</Window>
