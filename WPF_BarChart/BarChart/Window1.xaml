<Window x:Class="BarChart.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BarChart" Height="300" Width="316" Loaded="Window_Loaded">
  <Canvas Name="plot" SizeChanged="Canvas_SizeChanged">
    <Line Name="xAxis" Stroke="Black" StrokeThickness="3" ToolTip="abcissa" />
    <Line Name="yAxis" Stroke="Black" StrokeThickness="3" ToolTip="ordinate" />
  </Canvas>
</Window>
