<UserControl x:Class="UserControlDemo.Timer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="49" Width="207">
<!--
  /////////////////////////////////////////////////////////////////
  // Timer.xaml - custom timer control, uses DispatcherTimer     //
  //                                                             //
  // Jim Fawcett, CSE775 - Distributed Objects, Summer 2010      //
  // Source:                                                     //
  // Mark Berry, windowsclient.net/learn/video.aspx?v=76360      //
  /////////////////////////////////////////////////////////////////
-->
  <Border BorderThickness="3" BorderBrush="Black" >
    <StackPanel Orientation="Horizontal" >
      <TextBlock Margin="2,2,2,2" Name="_ElapsedTime" MinWidth="60" FontSize="16" FontWeight="Bold" 
                 TextAlignment="Center" VerticalAlignment="Center" >0</TextBlock>   
        <Button Click="StartTimer" Margin="2">Start Timer </Button>
        <Button Click="StopTimer" Margin="2">Stop Timer</Button>
    </StackPanel>
  </Border>
</UserControl>
