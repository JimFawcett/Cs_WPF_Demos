<Window x:Class="UserControlDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc1="clr-namespace:UserControlDemo"
    Title="User Control Demo" Height="275" Width="303">
<!--
  /////////////////////////////////////////////////////////////////////////
  // Window1.xaml - hosts custom timer control based on DispatcherTimer  //
  //                                                                     //
  // Jim Fawcett, CSE775 - Distributed Objects, Summer 2010              //
  // Source:                                                             //
  // Mark Berry, windowsclient.net/learn/video.aspx?v=76360              //
  /////////////////////////////////////////////////////////////////////////
-->
  <Grid HorizontalAlignment="Center">
    <StackPanel Orientation="Vertical" Margin="0,0,0,27">
      <Label Content="Elapsed Time - MilliSeconds" Height="34" Margin="0,30,0,0" HorizontalContentAlignment="Center"
           Name="label1" VerticalAlignment="Top" Width="200" FontSize="14" FontWeight="Bold" />
      <uc1:Timer x:Name="TimerControl" Width="206" Margin="0,5,0,0"></uc1:Timer>
      <Button Content="Reset" Height="33" Name="button1" Margin="0,20,0,0"
               VerticalAlignment="Top" Width="75" FontWeight="Bold" FontSize="14" Click="resetButton_Click" />
    </StackPanel>
  </Grid>
</Window>
