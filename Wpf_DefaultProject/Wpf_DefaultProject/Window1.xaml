<Window x:Class="Wpf_DefaultProject.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300" Loaded="Window_Loaded">
  <Grid>
    <ListBox Margin="10,52,8,58" Name="listBox1" />
    <Button Height="23" Margin="91,0,91,19" Name="button1" VerticalAlignment="Bottom" 
                        Foreground="WhiteSmoke" Click="button1_Click" Background="Black">
      <Button.BitmapEffect>
        <DropShadowBitmapEffect />
      </Button.BitmapEffect>
        Insert Line
      </Button>
    <TextBox Height="23" Margin="10,14,8,0" Name="textBox1" VerticalAlignment="Top" />
  </Grid>
</Window>
